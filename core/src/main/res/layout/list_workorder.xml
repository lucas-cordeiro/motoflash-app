<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/rectangle_cornes_white"
    android:padding="10dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSequenceFirst"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="1"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/circle_gray_light"
            android:padding="5dp" />

        <TextView
            android:id="@+id/txtAddressFirst"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Rua da Glória, 314"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorGreen"
            android:src="@drawable/ic_pin"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSequenceSecond"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="2"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/circle_gray_light"
            android:padding="5dp" />

        <TextView
            android:id="@+id/txtAddressSecond"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Rua da Glória, 314"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorGreen"
            android:src="@drawable/ic_pin"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerMotoboy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Pagamento"
            android:textStyle="bold"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
            <TextView
                android:id="@+id/txtPricePaymentCourier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_cornes_gray"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Total R$ 0,00"
                android:textStyle="bold"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/txtStatusPaymentCourier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:background="@drawable/rectangle_cornes_gray"
                android:backgroundTint="@color/colorBlue"
                android:textColor="@color/colorWhite"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="PENDENTE"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_gravity="end"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerInfoClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Cliente"
            android:textStyle="bold"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
            <TextView
                android:id="@+id/txtClientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_cornes_gray"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Lucas"
                android:textStyle="bold"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/txtClientMobilePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_cornes_gray"
                android:layout_marginStart="4dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="(12) 99123-5230"
                android:textStyle="bold"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="22/08"
            android:textStyle="bold"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_cornes_gray"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Total R$ 0,00"
                android:textStyle="bold"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:background="@drawable/rectangle_cornes_gray"
                android:backgroundTint="@color/colorBlue"
                android:textColor="@color/colorWhite"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="PENDENTE"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_gravity="end"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>